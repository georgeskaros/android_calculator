<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Bdiv"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Bmult"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/Bclear"
        android:text="/" />

    <Button
        android:id="@+id/Bclear"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Btan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="13dp"
        android:text="clear"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:id="@+id/Bcos"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Bsin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="14dp"
        android:text="cos" />

    <Button
        android:id="@+id/Bsin"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="16dp"
        android:text="sin" />

    <Button
        android:id="@+id/Bplus"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="-2dp"
        android:layout_toStartOf="@+id/Bsin"
        android:text="+" />

    <Button
        android:id="@+id/Bmult"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Bminus"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_toStartOf="@+id/Btan"
        android:text="x" />

    <Button
        android:id="@+id/Bminus"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Bplus"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/Bcos"
        android:text="-" />

    <Button
        android:id="@+id/Btan"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Bcos"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="14dp"
        android:text="tan" />

    <Button
        android:id="@+id/Bequals"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/B0"
        android:text="=" />

    <Button
        android:id="@+id/B0"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Bdot"
        android:text="0" />

    <Button
        android:id="@+id/B6"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B9"
        android:layout_alignStart="@+id/B5"
        android:layout_marginStart="63dp"
        android:layout_marginTop="-1dp"
        android:text="6" />

    <Button
        android:id="@+id/B5"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B8"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/B4"
        android:text="5" />

    <Button
        android:id="@+id/B1"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-1dp"
        android:text="1" />

    <Button
        android:id="@+id/B2"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="0dp"
        android:text="2" />

    <Button
        android:id="@+id/B3"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B6"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/B2"
        android:text="3" />

    <Button
        android:id="@+id/B4"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_below="@+id/B7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:text="4" />

    <Button
        android:id="@+id/B9"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@+id/B8"
        android:text="9" />

    <Button
        android:id="@+id/Bdot"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="406dp"
        android:text="." />

    <Button
        android:id="@+id/B8"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="230dp"
        android:layout_toEndOf="@+id/B7"
        android:text="8" />

    <Button
        android:id="@+id/B7"
        android:layout_width="63dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="230dp"
        android:text="7" />

    <TextView
        android:id="@+id/TextResult"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:id="@+id/TextInfo"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_below="@+id/TextResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="26dp" />

    <Switch
        android:id="@+id/Srad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Bdiv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:checked="false"
        android:showText="true"
        android:textOff="degrees"
        android:textOn="radians"
        tools:checked="false" />

</RelativeLayout>